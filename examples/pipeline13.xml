<PIPELINE>
	<MODULE seq="001" name="FILE PROCESSING">
		<FUNCTION name="LOAD FILE">
			<REGEXP>(.*)DAPI(.*)</REGEXP>
			<OUTPUT>IMAGE1</OUTPUT>
		</FUNCTION>
	</MODULE>
	<MODULE seq="002" name="FILE PROCESSING">
		<FUNCTION name="CROP IMAGE">
			<INPUT>IMAGE1</INPUT>
			<WINDOW_WIDTH>800</WINDOW_WIDTH>
			<WINDOW_HEIGHT>600</WINDOW_HEIGHT>
			<COORDINATES_X>500</COORDINATES_X>
			<COORDINATES_Y>700</COORDINATES_Y>
			<ASHOW>FALSE</ASHOW>
			<WINDOWSNAME>YOU CROPPED ME!</WINDOWSNAME>
			<OUTPUT>IMAGE12</OUTPUT>
		</FUNCTION>
	</MODULE>
	<MODULE seq="002" name="FILE PROCESSING">
		<FUNCTION name="NORMALIZE">
			<INPUT>IMAGE12</INPUT>
			<OUTPUT>IMAGE_BODIES</OUTPUT>
			<ASHOW>TRUE</ASHOW>
			<WINDOWSNAME>NULL</WINDOWSNAME>
			<!-- MAXMIN or LOG-->
			<TYPE>LOG</TYPE>
		</FUNCTION>
	</MODULE>
	 <MODULE seq="003" name="IMAGE PROCESSING">
		<FUNCTION name="ADAPTATIVE THRESHOLD">
			<INPUT>IMAGE_BODIES</INPUT>			
			<THRESHOLD_TYPE>BINARY</THRESHOLD_TYPE>
			<METHOD>GAUSSIAN</METHOD>
			<CONSTANT>0</CONSTANT>
			<BLOCKSIZE>31</BLOCKSIZE>
			<ASHOW>TRUE</ASHOW>
			<WINDOWSNAME>THRESHOLD</WINDOWSNAME>
			<OUTPUT>IMAGE3</OUTPUT>
		</FUNCTION>
	</MODULE>
	<MODULE seq="004" name="IMAGE PROCESSING">
		<FUNCTION name="MAKE BRUSH">
			<ASHOW>FALSE</ASHOW>
			<WINDOWSNAME>MY BRUSH</WINDOWSNAME>
			<BRUSH_SIZE_X>2</BRUSH_SIZE_X>
			<BRUSH_SIZE_Y>2</BRUSH_SIZE_Y>
			<BRUSH_TYPE>BOX_SHAPE</BRUSH_TYPE>
			<SIGMA>0</SIGMA>
			<OUTPUT>BRUSH NUMBER 1</OUTPUT>
		</FUNCTION>
	</MODULE>
	<MODULE seq="005" name="IMAGE PROCESSING">
		<FUNCTION name="ERODE">
			<ASHOW>TRUE</ASHOW>
			<WINDOWSNAME>EROSION</WINDOWSNAME>
			<INPUT>IMAGE3</INPUT>
			<BRUSH>BRUSH NUMBER 1</BRUSH>
			<ITERATIONS>2</ITERATIONS>
			<OUTPUT>FOREGROUND</OUTPUT>
		</FUNCTION>
	</MODULE>
    <MODULE seq="006" name="IMAGE PROCESSING">
		<FUNCTION name="MAKE BRUSH">
			<ASHOW>FALSE</ASHOW>
			<WINDOWSNAME>MY BRUSH</WINDOWSNAME>
			<BRUSH_SIZE_X>3</BRUSH_SIZE_X>
			<BRUSH_SIZE_Y>3</BRUSH_SIZE_Y>
			<BRUSH_TYPE>BOX_SHAPE</BRUSH_TYPE>
			<SIGMA>0</SIGMA>
			<OUTPUT>BRUSH NUMBER 2</OUTPUT>
		</FUNCTION>
	</MODULE>
	<MODULE seq="007" name="IMAGE PROCESSING">
		<FUNCTION name="DILATE">
			<ASHOW>TRUE</ASHOW>
			<WINDOWSNAME>DILATION</WINDOWSNAME>
			<INPUT>FOREGROUND</INPUT>
			<BRUSH>BRUSH NUMBER 2</BRUSH>
			<ITERATIONS>3</ITERATIONS>
			<OUTPUT>IMN</OUTPUT>
		</FUNCTION>
	</MODULE>
	<MODULE seq="008" name="IMAGE PROCESSING">
		<FUNCTION name="THRESHOLD">
			<INPUT>IMN</INPUT>
			<THRESHOLD>0.25</THRESHOLD>
			<THRESHOLD_TYPE>THRESH_BINARY_INV</THRESHOLD_TYPE>
			<MAX_THRESHOLD>0.5</MAX_THRESHOLD>
			<ASHOW>TRUE</ASHOW>
			<WINDOWSNAME>THRESHOLD_2</WINDOWSNAME>
			<OUTPUT>BACKGROUND</OUTPUT>
		</FUNCTION>
	</MODULE>
	<MODULE seq="009" name="SEGMENTATION PROCESSING">
		<FUNCTION name="WATERSHED">
			<FOREGROUND>FOREGROUND</FOREGROUND>
			<BACKGROUND>BACKGROUND</BACKGROUND>
			<INPUT>IMAGE_BODIES</INPUT>
			<OUTPUT>SEGMENT</OUTPUT>
			<ASHOW>TRUE</ASHOW>
			<WINDOWSNAME>SEGMENTATION by Watershed</WINDOWSNAME>
		</FUNCTION>
	</MODULE>
</PIPELINE>
